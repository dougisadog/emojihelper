<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/page_left_v2"
            android:paddingRight="@dimen/page_right_v2" >

            <RelativeLayout
                android:id="@+id/rlCustomer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_btn_common"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/imgCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_customer" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgCustomer"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="购物车"
                    android:textColor="@color/font_gray_man"
                    android:textSize="@dimen/font_hint_v2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlInvest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_btn_common"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/imgInvest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_invest" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgInvest"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="新闻"
                    android:textColor="@color/font_gray_man"
                    android:textSize="@dimen/font_hint_v2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlPersonData"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_btn_common"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/imgPersonData"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_photo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgPersonData"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="商品列表"
                    android:textColor="@color/font_gray_man"
                    android:textSize="@dimen/font_hint_v2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlMessage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_btn_common"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/imgMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_calendar" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgMessage"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="解决方案"
                    android:textColor="@color/font_gray_man"
                    android:textSize="@dimen/font_hint_v2" />
            </RelativeLayout>

            <!-- logout -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginBottom="@dimen/page_bottom_v2"
                android:layout_marginTop="@dimen/page_top_v2" >

                <TextView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn_common"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="@color/black_v2" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>